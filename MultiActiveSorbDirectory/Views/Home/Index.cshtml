@model MultiActiveSorbDirectory.Models.ActiveDirectoryAccount
@{
    ViewBag.Title = "Home Page";
}
<div class="jumbotron text-center">
    <h1>Active Directory Tool</h1>
</div>

<div class="row">
    <div class="col-lg-12" style ="text-align:center;">
            <input style ="text-align:center;" type="text" class="form-control input-lg" id="search" placeholder="Type in here to filter by First Name, Last Name, or UserName!">
    </div><!-- /.col-lg-12 -->
    
</div>

<div class="row">
        <table class="table" id="userTable">
            <thead>
                <tr>
                    <th>Display Name</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Alias</th>
                    <th>Job Title</th>
                    <th>Department</th>
                    <th style="display:none;">Distinguishing Name</th>
                    <th style="display:none;">Name</th>
                    <th style="display:none;">Initials</th>
                    <th style="display:none;">Logon Name</th>
                    <th style="display:none;">Mail</th>
                    <th style="display:none;">MS Exchange Server Name</th>
                    <th style="display:none;">Country/Religion</th>
                    <th style="display:none;">Company</th>
                    <th style="display:none;">Home Phone</th>
                    <th style="display:none;">Location</th>
                    <th style="display:none;">Mobile Phone</th>
                    <th style="display:none;">Object Class</th>
                    <th style="display:none;">Postal Code</th>
                    <th style="display:none;">State</th>
                    <th style="display:none;">Street Address</th>
                    <th style="display:none;">Telephone Number</th>
                    <th style="display:none;">Account Enabled</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model.Accounts)
                {
                    <tr style="cursor: pointer;">
                        <td>@account.displayName</td>
                        <td>@account.givenName</td>
                        <td>@account.SN</td>
                        <td>@account.sAMAccountName</td>
                        <td>@account.title</td>
                        @if (account.department == "IT" || account.department == "IS")
                        {
                            <td>Information Technology</td>
                        }
                        else
                        {
                            <td>@account.department</td>
                        }
                        <td style="display:none;">@account.distinguishingName</td>
                        <td style="display:none;">@account.CN</td>
                        <td style="display:none;">@account.initials</td>
                        <td style="display:none;">@account.userPrincipalName</td>
                        <td style="display:none;">@account.mail</td>
                        <td style="display:none;">@account.msExchHomeServerName</td>
                        <td style="display:none;">@account.c</td>
                        <td style="display:none;">@account.company</td>
                        <td style="display:none;">@account.homephone</td>
                        <td style="display:none;">@account.l</td>
                        <td style="display:none;">@account.mobile</td>
                        <td style="display:none;">@account.ObjectClass</td>
                        <td style="display:none;">@account.postalCode</td>
                        <td style="display:none;">@account.st</td>
                        <td style="display:none;">@account.streetAddress</td>
                        <td style="display:none;">@account.telephoneNumber</td>
                        @if(account.userAccountControl == "514"){
                            <td style="display:none;">Account Disabled</td>
                        }
                        else{
                            <td style="display:none;">Account Enabled</td>
                        }
                    </tr>
                }
            </tbody>
        </table>

    </div>
@Scripts.Render("~/Scripts/AccountSearch.js")
